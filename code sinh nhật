    <script>
        
        const TEN_NGUOI_NHAN = "NG∆Ø·ªúI Y√äU"; // <<<<< THAY T√äN ·ªû ƒê√ÇY
        const HEART_COLORS = ['#ff69b4', '#ffc0cb', '#ff1493', '#e91e63', '#ff007f'];
        
        document.addEventListener('DOMContentLoaded', () => {
            // C·∫≠p nh·∫≠t t√™n ng∆∞·ªùi nh·∫≠n
            document.getElementById('recipient-name').textContent = `D√†nh t·∫∑ng ${TEN_NGUOI_NHAN} y√™u qu√Ω!`;

            // 1. K√≠ch ho·∫°t Confetti khi trang t·∫£i
            confetti({
                particleCount: 150,
                spread: 120,
                origin: { y: 0.6 }
            });

            // 2. T·∫°o hi·ªáu ·ª©ng tr√°i tim l∆° l·ª≠ng
            const body = document.body;
            const numHearts = 30; 

            for (let i = 0; i < numHearts; i++) {
                const heart = document.createElement('div');
                heart.classList.add('heart');
                
                // ƒê·∫∑t m√†u ng·∫´u nhi√™n cho tr√°i tim v√† c√°c ph·∫ßn t·ª≠ gi·∫£
                const color = HEART_COLORS[Math.floor(Math.random() * HEART_COLORS.length)];
                heart.style.backgroundColor = color;
                heart.style.setProperty('background-color', color); 

                // V·ªã tr√≠ v√† delay ng·∫´u nhi√™n
                heart.style.left = `${Math.random() * 100}vw`;
                heart.style.animationDelay = `${Math.random() * -8}s`; 
                heart.style.setProperty('--x-offset', `${(Math.random() - 0.5) * 200}px`);

                body.appendChild(heart);
            }
        });

        function hienThiLoiChuc() {
            const nut = document.querySelector('.birthday-button');
            const secretBox = document.getElementById('secret-message-box');
            const mainContainer = document.querySelector('.container');

            // 1. V√¥ hi·ªáu h√≥a v√† thay ƒë·ªïi n√∫t
            nut.textContent = "L·ªùi ch√∫c ƒëang ƒë∆∞·ª£c m·ªü...";
            nut.disabled = true;
            nut.style.backgroundColor = '#ccc';
            nut.style.cursor = 'default';
            nut.style.boxShadow = 'none';
            
            // 2. K√≠ch ho·∫°t Confetti b√πng n·ªï
            confetti({
                particleCount: 300,
                spread: 180,
                origin: { y: 0.5 }
            });

            // 3. ·∫®n container ch√≠nh v√† hi·ªÉn th·ªã m√†n h√¨nh b√≠ m·∫≠t sau 1 gi√¢y
            mainContainer.style.opacity = '0';
            setTimeout(() => {
                secretBox.classList.add('show');
            }, 500); // ƒê·ª£i 0.5 gi√¢y cho container m·ªù ƒëi
        }

        function closeSecretMessage() {
            // Cho ph√©p ng∆∞·ªùi d√πng nh·∫•n v√†o b·∫•t c·ª© ƒë√¢u ƒë·ªÉ ƒë√≥ng l·ªùi ch√∫c
            const secretBox = document.getElementById('secret-message-box');
            const mainContainer = document.querySelector('.container');
            
            secretBox.classList.remove('show');
            
            // Hi·ªán l·∫°i container ch√≠nh
            mainContainer.style.opacity = '1';

            // K√≠ch ho·∫°t m·ªôt Confetti nh·∫π khi tr·ªü v·ªÅ
            confetti({
                particleCount: 80,
                spread: 60,
                origin: { y: 0.8 }
            });
        }
    </script>
    
